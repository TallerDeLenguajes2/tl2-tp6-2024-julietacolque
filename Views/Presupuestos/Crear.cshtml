@model Presupuesto
@{
    ViewData["Title"] = "Crear Presupuestos";
}


<div class="container mt-5 mb-5">
    <h2 class="mb-4">Crear Presupuesto</h2>

    <form method="post" asp-controller="Presupuestos" asp-action="AddPresupuesto">
        <div class="row mb-3">

            <label asp-for="NombreDestinatario" class="col-sm-2 col-form-label">Nombre: </label>
            <div class="col-sm-4">
                <input asp-for="NombreDestinatario" type="text" id="NombreDestinatario" name="NombreDestinatario"
                    class="form-control" required />
            </div>
        </div>
        <!---- MODAL ELIMINAR 

        <div class="row mb-3">
            <label asp-for="FechaCreacion" class="col-sm-2 col-form-label">Precio: </label>
            <div class="col-sm-4">
                <input asp-for="FechaCreacion" type="date" id="FechaCreacion" name="FechaCreacion" class="form-control" required min="0" step="0.01" />
            </div>
        </div>
------>
        <div class="d-flex justify-content gap-2">
            <a asp-controller="Presupuestos" asp-action="Index" class="btn btn-primary">Cancelar</a>
            <button class="btn btn-success" type="submit">Guardar</button>
        </div>
    </form>
</div>
