@model List<Producto>
@{


    ViewData["Title"] = "Productos";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Descripción</th>
            <th scope="col">Precio</th>
            <th scope="col">Acción</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var prod in Model)
        {
            <tr>
                <td>@prod.IdProducto</td>
                <td>@prod.Descripcion</td>
                <td>@prod.Precio</td>
                <td>
                    <a asp-controller="Productos" asp-action="Modificar" asp-route-id="@prod.IdProducto"
                        class="btn btn-warning">Modificar</a>

                    <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop"
                        onclick="idProducto(@prod.IdProducto)">Eliminar</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-asp-controller="Productos" asp-action="Crear" class="btn btn-success">Cargar producto</a>


<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Eliminar Producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-controller="Productos" asp-action="Eliminar">
                <div class="modal-body">

                    <p>¿Estás seguro que deseas eliminar el producto?</p>
                    <input type="hidden" id="idProducto" name="idProducto" value="" class="form-control" />

                </div>

                <div class="modal-footer">
                    <a class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</a>
                    <button class="btn btn-danger" type="submit">Eliminar</button>

                </div>
            </form>
        </div>
    </div>
</div>
<script>

    function idProducto(id) {
        console.log("ID del producto a eliminar:", id);
        document.getElementById('idProducto').value = id;
        console.log("Valor asignado al input oculto:", document.getElementById('idProducto').value); // Verifica el valor
    }
</script>