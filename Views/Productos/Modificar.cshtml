@model Producto
@{
    ViewData["Title"] = "Modificar Producto";
}

<div class="container mt-5 mb-5">
    <h2 class="mb-4">Modificar Producto</h2>

    <form method="post" asp-controller="Productos" asp-action="Actualizar">

        <input type="hidden" id="idProducto" name="idProducto" class="form-control" value="@Model.IdProducto" />

        <div class="row mb-3">

            <label for="Descripcion" class="col-sm-2 col-form-label">Descripcion: </label>
            <div class="col-sm-4">
                <input type="text" id="Descripcion" name="Descripcion" class="form-control" value="@Model.Descripcion"
                    required />
            </div>
        </div>

        <div class="row mb-3">
            <label for="Precio" class="col-sm-2 col-form-label">Precio: </label>
            <div class="col-sm-4">
                <input type="number" id="Precio" name="Precio" class="form-control" value="@Model.Precio" required
                    min="0" step="0.01" />
            </div>
        </div>

        <div class="d-flex justify-content gap-2">
            <a asp-controller="Productos" asp-action="Index" class="btn btn-primary">Cancelar</a>
            <button class="btn btn-success" type="submit">Guardar</button>
        </div>
    </form>
</div>
